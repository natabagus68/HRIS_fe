{
  "routes": [
    {
      "src": "/admin/(.*)", // Pola untuk URL yang sesuai dengan path "/admin"
      "dest": "/admin/index.html", // Destinasi yang sesuai dengan entri utama Vue Anda
      "continue": true // Gunakan "continue" untuk membiarkan routing Vue menghandle routing internal
    },
    {
      "src": "/admin/(.*)", // Pola untuk asset atau file statis di dalam subpath "/admin"
      "dest": "/admin/$1" // Destinasi untuk asset/file statis
    },
    {
      "src": "/(.*)", // Pola default untuk routing lainnya
      "dest": "/index.html", // Destinasi ke entri utama Vue
      "continue": true
    }
  ]
}
